<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <servlet>
        <servlet-name>helloWorld</servlet-name>
        <servlet-class>am.smartCode.jdbc.controller.HelloServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>helloWorld</servlet-name>
        <url-pattern>/hello</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>login</servlet-name>
        <servlet-class>am.smartCode.jdbc.controller.LoginServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>


    <servlet>
        <servlet-name>register</servlet-name>
        <servlet-class>am.smartCode.jdbc.controller.RegisterServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>register</servlet-name>
        <url-pattern>/register</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>create</servlet-name>
        <servlet-class>am.smartCode.jdbc.controller.CreateProductServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>create</servlet-name>
        <url-pattern>/createProduct</url-pattern>
    </servlet-mapping>


    <servlet>
        <servlet-name>delete</servlet-name>
        <servlet-class>am.smartCode.jdbc.controller.DeleteProductServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>delete</servlet-name>
        <url-pattern>/deleteProduct</url-pattern>
    </servlet-mapping>


    <servlet>
        <servlet-name>update</servlet-name>
        <servlet-class>am.smartCode.jdbc.controller.UpdateProductServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>update</servlet-name>
        <url-pattern>/updateProduct</url-pattern>
    </servlet-mapping>


    <servlet>
        <servlet-name>get</servlet-name>
        <servlet-class>am.smartCode.jdbc.controller.GetProductServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>get</servlet-name>
        <url-pattern>/getProduct</url-pattern>
    </servlet-mapping>

</web-app>